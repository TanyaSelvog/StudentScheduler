<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainActivity">

    <Button
        android:id="@+id/termsBtn"
        android:layout_width="337dp"
        android:layout_height="58dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3F51B5"
        android:fontFamily="casual"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0.2"
        android:onClick="onTermsClick"
        android:text="@string/terms"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/coursesBtn"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#9C27B0"
        android:fontFamily="casual"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0.2"
        android:onClick="onCoursesClick"
        android:text="@string/courses"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termsBtn" />

    <Button
        android:id="@+id/assessmentsBtn"
        android:layout_width="336dp"
        android:layout_height="58dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#673AB7"
        android:fontFamily="casual"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0.2"
        android:onClick="onAssessmentsClick"
        android:text="@string/assessments"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coursesBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>